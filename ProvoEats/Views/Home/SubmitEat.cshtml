@{
    ViewBag.Title = "Submit An Eat";
}

@model UserSubmission

<div class="text-center">
    <h1 class="display-4">@ViewBag.Title</h1>
    <form asp-action="SubmitEat" method="post">
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" />
        <br />
        <label asp-for="RestaurantName">Restaurant Name:</label>
        <input asp-for="RestaurantName" />
        <br />
        <label asp-for="FavoriteDish">Favorite Dish:</label>
        <input asp-for="FavoriteDish" />
        <br />
        <label asp-for="Phone">Phone:</label>
        <input asp-for="Phone" />
        <br />
        
        <button action="submit">Submit</button>
    </form>

    <div asp-validation-summary="All"></div>
</div>